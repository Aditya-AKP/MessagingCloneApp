        <item name="android:statusBarColor">?attr/deep_color</item>

        <item name="chat_background">@color/light_black</item>
        <item name="textColor">@color/white</item>
        <item name="inverse_textColor">@color/black</item>
        <item name="special_textColor">@color/cream</item>
