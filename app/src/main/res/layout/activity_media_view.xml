<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaViewActivity">

    <com.akpdeveloper.baatcheet.utilities.MyImageView
        android:visibility="gone"
        android:id="@+id/MediaViewActImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/Sender_Message_Layout_ImageView_content_description"
        android:src="@drawable/baseline_close_24" />
    <VideoView
        android:visibility="visible"
        android:id="@+id/MediaViewActVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />
    <ImageButton
        android:id="@+id/MediaViewActLeftButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:contentDescription="@string/Sender_Message_Layout_ImageView_content_description"
        android:src="@drawable/baseline_chevron_left_24"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <ImageButton
        android:id="@+id/MediaViewActRightButton"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:contentDescription="@string/Sender_Message_Layout_ImageView_content_description"
        android:src="@drawable/baseline_chevron_right_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/MediaViewActSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/baseline_send_24"
        android:backgroundTint="?attr/dark_color"
        android:tint="?attr/textColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>