<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatusFragment">

    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
        android:id="@+id/StatusFragProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/StatusFragNoText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="40sp"
        android:text="No Status" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/StatusFragRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/user_list_layout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/StatusFragFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        android:backgroundTint="@color/normal_orange"
        android:layout_gravity="bottom | end"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"/>


</FrameLayout>